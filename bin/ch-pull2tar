#!/bin/sh

libexec="$(cd "$(dirname "$0")" && pwd)"
. "${libexec}/base.sh"

set -e

usage () {
    cat 1>&2 <<EOF
Download image via "docker pull" and flatten it to tarball.

Usage:

  $ $(basename "$0") IMAGE DEST

You must have sufficient privilege (via sudo) to run Docker commands.
EOF
    exit "${1:-1}"
}

if [ "$1" = "--help" ]; then
    usage 0
fi
if [ "$1" = "--version" ]; then
    version
    exit 0
fi
if [ "$#" -ne 2 ]; then
    usage
fi

if [ -z "$CH_BUILDER" ]; then
    echo "You need to define \$CH_BUILDER before running ch-pull2tar"
fi

image=$1
dest=$2

case $CH_BUILDER in
    docker)
        docker_ pull "$image"
        ;; 
    buildah)
        buildah_ pull "$image"
        ;;
esac
"${ch_bin}/ch-docker2tar" "$image" "$dest"
