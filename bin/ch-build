#!/bin/sh

libexec="$(cd "$(dirname "$0")" && pwd)"
. "${libexec}/base.sh"

# shellcheck disable=SC2034
usage=$(cat <<EOF
Wrapper for "docker build" with various enhancements.

Usage:

  $ $(basename "$0") -t TAG [ARGS ...] CONTEXT

ARGS are passed unchanged to "docker build" after the workaround arguments.
EOF
)

parse_basic_args "$@"

dockerfile=
if [ -f Dockerfile ]; then
    dockerfile="--file=$PWD/Dockerfile"
    for arg in "$@"; do
        if [ "${arg#--file}" != "$arg" ]; then
            # --file already specified, don't override
            dockerfile=
            break
        fi
    done
fi

# Check if CH_BUILDER is defined in the environment
if [ -z "$CH_BUILDER" ]; then 
    echo "You need to define \$CH_BUILDER before running ch-build"
fi

case $CH_BUILDER in
        docker) 
                # Coordinate this list with test "build.bats/proxy variables".
                docker_ build --build-arg HTTP_PROXY="$HTTP_PROXY" \
                        --build-arg HTTPS_PROXY="$HTTPS_PROXY" \
                        --build-arg NO_PROXY="$NO_PROXY" \
                        --build-arg http_proxy="$http_proxy" \
                        --build-arg https_proxy="$https_proxy" \
                        --build-arg no_proxy="$no_proxy" \
                        $dockerfile \
                        "$@"
        ;;
        buildah)
                # shellcheck disable=SC2154
                export BUILDAH_ISOLATION=rootless
                export STORAGE_DRIVER=vfs
                buildah_ build-using-dockerfile \
                        --build-arg HTTP_PROXY="$HTTP_PROXY" \
                        --build-arg HTTPS_PROXY="$HTTPS_PROXY" \
                        --build-arg NO_PROXY="$NO_PROXY" \
                        --build-arg http_proxy="$http_proxy" \
                        --build-arg https_proxy="$https_proxy" \
                        --build-arg no_proxy="$no_proxy" \
                        --runtime ch-run-oci \
                        --squash "$@" . < /dev/null
        ;;
        esac

